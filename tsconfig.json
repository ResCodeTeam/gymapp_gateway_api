{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "lib": ["esnext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2016",
    "resolveJsonModule": true
  },
  "exclude": ["src/tests", "./node_modules/", "./dist/"]
}
